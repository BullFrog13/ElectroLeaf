{
  "name": "electro-leaf1",
  "version": "0.1.0",
  "private": true,
  "main": "public/electron.js",
  "homepage": "./electron.js",
  "author": "Vadym Harkusha, Yevgeniy Tkachenko",
  "description": "Desktop application for managing Nanoleaf",
  "license": "MIT",
  "scripts": {
    "start": "react-scripts start",
    "react-build": "react-scripts build",
    "eject": "react-scripts eject",
    "electron-start": "electron .",
    "electron-dev": "concurrently \"npm start\" \"wait-on http://localhost:3000 && electron .\" \"npm start --prefix ./discovery\"",
    "electron-pack": "build --em.main=build/electron.js",
    "electron-build": "electron-builder",
    "lint": "eslint ./src --fix"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "build": {
    "appId": "nonExistentID",
    "productName": "ElectroLeaf",
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "@material-ui/core": "^4.11.0",
    "@material-ui/icons": "^4.9.1",
    "@material-ui/lab": "^4.0.0-alpha.56",
    "@material-ui/styles": "^4.9.0",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.4.0",
    "@testing-library/user-event": "^7.2.1",
    "axios": "^0.19.2",
    "classnames": "^2.2.6",
    "clsx": "^1.1.0",
    "color-convert": "2.0.1",
    "concurrently": "^5.0.2",
    "electron-is-dev": "^1.1.0",
    "electron-osx-sign": "^0.4.15",
    "material-ui-color-picker": "^3.5.0",
    "nanoleaf-client": "^0.1.7",
    "nanoleaf-layout": "^3.0.3",
    "react": "^16.12.0",
    "react-color": "2.18.0",
    "react-dom": "^16.12.0",
    "react-router-dom": "^5.1.2",
    "react-scripts": "^3.4.3",
    "wait-on": "^3.3.0"
  },
  "devDependencies": {
    "electron": "^2.0.8",
    "electron-builder": "^21.2.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.18.3",
    "eslint-plugin-react-hooks": "^1.7.0"
  }
}
